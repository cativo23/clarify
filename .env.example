# Supabase Configuration
# IMPORTANT: SUPABASE_URL must be the full URL including protocol (https://)
# This is used for SSRF protection to validate storage URLs
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Redis Configuration
# Local Development (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379

# Production (Upstash Redis - Fixes M3 Security Issue)
# Sign up at https://upstash.com to get these credentials
# Free tier: 10,000 commands/day with authentication and TLS
# Same variables work for both local and Upstash!
# REDIS_HOST=your-host.upstash.io
# REDIS_PORT=6379
# REDIS_TOKEN=your_upstash_token

# Database (Local Development)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/clarify

# Application
NODE_ENV=development
BASE_URL=http://localhost:3000
NUXT_PUBLIC_BASE_URL=http://localhost:3001

# Security: Allowed redirect origins for Stripe checkout
# Comma-separated list of allowed origins for redirect URLs
# Prevents open redirect/phishing attacks (C3)
# If not set, defaults to BASE_URL
ALLOWED_REDIRECT_ORIGINS=https://your-production-domain.com,https://staging.your-domain.com
